<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Expense Tracker</title>
</head>
<body>
    <div>
        <canvas id="expense-chart" data-budget="{{data}}"></canvas>
    </div>
    <h2>Expense Tracker</h2>

    <div class="container">
        <h4>{{name}}'s Budgets</h4>
        {{#each Budgets}}
        {{#if Expenses.length}}
        <h5>{{name}}</h5>
        <h1 id="balane">${{sum_expense Expenses}}</h1>
        {{/if}}
        {{/each}}
        {{#each Budgets}}
        <div>{{name}} {{total_budget}}</div>
        {{/each}}
        <div class="inc-exp-container">
            <div>
                <h4>Income</h4>
                <p id="money-plus" class="money plus">+{{income}}</p>
            </div>
            <div>
                <h4>Expense</h4>
                <p id="money-minus" class="money minus">-{{expense}}</p>
            </div>
        </div>

        <h3>History</h3>
        <ul id="list" class="list">
            {{#each transactions}}
            <li class="{{#if isExpense}}minus{{else}}plus{{/if}}">
                {{expense_name}} <span>{{expense_amount}}</span><button class="delete-btn" onclick="removeTransaction({{id}})">x</button>
            </li>
            {{/each}}
        </ul>
        <h3>Add New Budget</h3>
        <form id="form budget">
            <div class="form-control">
                <label for="budgetName">Budget Name</label>
                <input type="text" id="budgetName" placeholder="Enter text..." />
            </div> 
            <div class="form-control">
                <label for="budgetFunding">Amount</label>
                <input type="number" step="0.01" id="budgetFunding"placeholder="Enter amount..." />
            </div>
            <button class="btn" id="new-budget">Add Budget</button>
    
            <button class="btn" id="delete-budget">Delete Budget</button>
        </form>

        <h3>Add New Expense</h3>
        <form id="form">
            <div class="form-control">
                <label for="expenseName">Expense Name</label>
                <input type="text" id="expenseName" placeholder="Enter text..." />
            </div>  
            <div class="form-control">
                <label for="expenseDesc">Expense Category</label>
                <input type="text" id="expenseDesc" placeholder="Enter text..." />
            </div>
            <div class="form-control">
                <label for="expenseFunding">Amount</label>
                <input type="number" step="0.01" id="expenseFunding"placeholder="Enter amount..." />
            </div>
            <button class="btn" id="new-expense">Add Expense</button>
    
            <button class="btn" id="delete-expense">Delete Expense</button>
        </form>
    </div>


    <script src="./js/tracker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/chartRender.js"></script>
    <script src="js/profile.js"></script>
    <script src="js/budgetCRUD.js"></script>
    
</body>
</html>
