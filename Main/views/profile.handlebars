<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Expense Tracker</title>
</head>
<body>
    <h2 class = welcome>Welcome, {{name}}!</h2>
    <div class = "layout">
        <div class="container">
            <h4>Your Balance</h4>
            <h1 id="balance">$0.00</h1>

            <div class="inc-exp-container">
                <div>
                    <h4>Income</h4>
                    <h4 id="money-plus" class="money plus">+{{income}}</h4>
                </div>
                <div>
                    <h4>Expense</h4>
                    <h4 id="money-minus" class="money minus">-{{expense}}</h4>
                </div>
            </div>

            <h3>History</h3>
            <ul id="list" class="list">
                {{#each transactions}}
                <li class="{{#if isExpense}}minus{{else}}plus{{/if}}">
                    {{expense_name}} <span>{{expense_amount}}</span><button class="delete-btn" onclick="removeTransaction({{id}})">x</button>
                </li>
                {{/each}}
            </ul>

            <h3>Add new transaction</h3>
            <form id="form">
                <div class="form-control">
                    <label for="text">Text</label>
                    <input type="text" id="text" placeholder="Enter text..." />
                </div>
                <div class="form-control">
                    <label for="amount">Amount <br>(negative - expense, positive - income)</label>
                    <input type="number" id="amount" placeholder="Enter amount..." />
                </div>
                <button class="btn">Add transaction</button>
            </form>
        </div>
        <div>
            <canvas id="expense-chart" data-budget="{{data}}"></canvas>
        </div>
    </div>


    <script src="./js/tracker.js"></script>
</body>
</html>
