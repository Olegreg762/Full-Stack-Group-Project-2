<!-- Loop over each object in the expenses array -->
{{#each expenses as |expense| }}
<div class="row mb-4 expense">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/expense/{{expense.id}}">{{expense.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount expense.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{expense.user.name}} on {{format_date expense.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{expense.description}}
    </p>
  </div>
</div>
{{/each}}
